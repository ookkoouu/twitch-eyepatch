{
	"name": "twitch-eyepatch",
	"version": "1.2.1",
	"description": "Twitchのチャットから心の平穏を保ちます。",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "run-p build:chrome build:firefox",
		"build:dev": "cross-env NODE_ENV=development wxt build",
		"build:analyze": "wxt build --analyze",
		"build:strict": "run-s postinstall typecheck build",
		"build:chrome": "wxt build -b chrome",
		"build:firefox": "wxt build -b firefox",
		"zip": "run-p zip:chrome zip:firefox",
		"zip:chrome": "wxt zip -b chrome",
		"zip:firefox": "wxt zip -b firefox",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --apply .",
		"postinstall": "wxt prepare"
	},
	"dependencies": {
		"@chakra-ui/react": "^2.8.2",
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.5",
		"@okou/webext-storage": "^2.1.0",
		"@webext-core/messaging": "^1.4.0",
		"framer-motion": "^11.0.28",
		"js-cookie": "^3.0.5",
		"nanoid": "^5.0.7",
		"react-icons": "^5.0.1"
	},
	"devDependencies": {
		"@apollo/client": "^3.9.11",
		"@biomejs/biome": "^1.8.1",
		"@types/js-cookie": "^3.0.6",
		"@types/react": "^18.2.77",
		"@types/react-dom": "^18.2.25",
		"@vitejs/plugin-react": "^4.2.1",
		"cross-env": "^7.0.3",
		"fast-deep-equal": "^3.1.3",
		"lefthook": "^1.6.10",
		"npm-run-all2": "^6.1.2",
		"prettier": "^3.2.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.4.5",
		"wxt": "^0.17.12"
	}
}
